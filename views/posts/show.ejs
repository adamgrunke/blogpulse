<h1><%= post.title %><small>by <%= post.author.name%></small></h1>

<p>
    <%= moment(post.createdAt).calendar() %>
</p>

<p>
<% post.tags.forEach(function(tag){ %>
    <span><%= tag.name%> | </span>
<% }); %>
</p>
<form action="/tags" method="POST">
    <input type="text" name="name" placeholder="name">
    <input type="hidden" name="postId" value="<%= post.id %>" >
    <input type="submit" value="TAG THS POST">
</form> 

<p><%= post.content %></p>

<hr />

<form action="/comments" method="POST">
    <input hidden type="text" name="postId" value="<%= post.id %>">
    <input type="text" name="author" placeholder="enter your name here..."><br />
    <input type="text" name="comment" placeholder="enter your comment here..."><br />
    <input type="submit" value="Post Comment!">
</form>

<% post.comments.forEach(function(comment) { %>
    <hr />
    <h4>commenter: <%= comment.author %> </h4>
    <h3>comments: <%= comment.comment %> </h3>
<% }) %>







<a href="/">&larr; Back Home</a>